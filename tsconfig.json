{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "pretty": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "checkJs": true
    },
    "include": [
        "src/**/*"
    ],
    "typeroots": ["node_modules/@types"],
}